<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>
</head>

<body class="bg-gray-900 text-white">
  <div class="flex flex-col justify-center items-center h-screen text-center gap-10">
    <h1 class="text-4xl mb-10">Lista de Tarefas</h1>

    <div class="flex flex-col">
      <div>
        <% lists.forEach(item=> { %>
          <div class="flex flex-col  border p-2 rounded-md border-gray-600 mb-5" style="width: 700px;">

            <div class="flex flex-row  items-center justify-between w-full">
              <a class="text-[18px] uppercase underline" href="/app/<%= item.id %>">
                <%= item.content %>
              </a>

              <form action="/app/<%= item.id %>/delete" method="post">
                <button class="px-2 py-1 rounded-md bg-red-500" type="submit">Excluir</button>
              </form>
            </div>
          </div>
          <% }) %>

      </div>
      <a href="/app/new-list" class="p-2 rounded-md bg-blue-500 text-[14px]" style="width: 150px;">Nova
        lista
        de
        tarefas</a>
      </form>



    </div>
</body>

</html>